{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "#seedwork/*": ["./@seedwork/*"],
      "#modules/*": ["./modules/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "allowJs": true
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
